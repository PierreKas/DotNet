<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Event Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Event Management App", "Login", "Attendees", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
@*            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Event Type", "Index", "EventTypes", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Venues", "Index", "Venues", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Event Details", "Index", "EventDetails", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Attendees", "Index", "Attendees", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Event Registration", "Index", "EventRegistrations", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>*@
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Logout</h5>
                        <p class="card-text">Log out from your account when you're done.</p>
                        @Html.ActionLink("Logout", "Logout", "Authentications", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - Event Management App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
