@model IEnumerable<EventManagementSystem.Models.Venue>

@{
    ViewBag.Title = "Index";
}

<h2>Fully booked venues</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capacity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.capacity.Equals(3))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.place)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.capacity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.uuId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.uuId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.uuId })
                </td>
            </tr>
        }

    }

</table>
